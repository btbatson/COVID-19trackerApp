<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_marginRight="10px"
        android:layout_marginLeft="10px"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:maxLines="2"
                    android:ellipsize="end" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        app:srcCompat="@drawable/graph" />

                    <TextView
                        android:id="@+id/cases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Cases: "
                        android:fontFamily="@font/google_sans_medium"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15px"
                        android:text="45"
                        android:fontFamily="@font/google_sans_regular"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/recoveredlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recoveries: "
                        android:fontFamily="@font/google_sans_medium"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/recovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15px"
                        android:fontFamily="@font/google_sans_regular"
                        android:text="45"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        app:srcCompat="@drawable/user" />
                    <TextView
                        android:id="@+id/criticallabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Deaths: "
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/critical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="45"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/deathslabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Critical: "
                        android:fontFamily="@font/google_sans_medium"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/deaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15px"
                        android:text="45"
                        android:fontFamily="@font/google_sans_medium"

                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        app:srcCompat="@drawable/diagram" />
                    <TextView
                        android:id="@+id/today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Today's Cases: "
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>
                    <TextView
                        android:id="@+id/todayCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="45"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="3dp"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"/>


                </LinearLayout>


            </LinearLayout>



    </android.support.v7.widget.CardView>
</RelativeLayout>
